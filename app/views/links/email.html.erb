<%= form_for(@link, url: email_sent_user_link_path(id: @link.id, user_id:current_user.id)) do |f| %>
    <table>
      <thead>
      <tr>
        <th><%= f.label :outbound_email %></th>
        <th><%= f.label :url %></th>
      </tr>
      </thead>
      <tbody>
      <tr>
        <td><%= f.text_field :outbound_email %></td>
        <td><%= @link.url %></td>
        <td><%= f.submit "Send Email" %></td>
      </tbody>
    </table>
<% end %>